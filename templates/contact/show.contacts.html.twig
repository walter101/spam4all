{% extends 'spam4u.base.html.twig' %}

{% block title %}Manage account!{% endblock %}

{% block body %}
    <div class="container">
        <div class="topic-box">
            <h2>Your contact email addresses</h2>
        </div>
        <div class="content-box">

            Here you can see all your contact<br>
            You can also delete a contact (but wtf! why? more contacts == more spam!)<br>
            <br>
            
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                {% for emailaddress in existingContactEmailAddresses %}
                    <tr>
                        <th scope="row">{{ emailaddress.id }}</th>
                        <td>{{ emailaddress.email }}</td>
                        <td><a href="{{ path('app_edit_contactemailaddress', {'id':emailaddress.id}) }}">Edit</a></td>
                        <td><a href="{{ path('app_delete_contact', {'id':emailaddress.id}) }}">delete</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}