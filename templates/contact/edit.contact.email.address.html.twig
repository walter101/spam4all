{% extends 'spam4u.base.html.twig' %}

{% block title %}Manage account!{% endblock %}

{% block body %}
    <div class="container">

        <div class="topic-box">
            <h2>Edit contact email address</h2>
        </div>
        <div class="content-box">
            Edit the contact email address<br>
            <br>

            {% for message in app.flashes('email-edited-message') %}
                <div class="col-sm-12">
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                </div>
            {% endfor  %}

            {% for message in app.flashes('duplicated-email-error') %}
                <div class="col-sm-12">
                    <div class="alert alert-danger ">
                        {{ message }}
                    </div>
                </div>
            {% endfor %}

            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}